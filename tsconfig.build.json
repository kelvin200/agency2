{
  "compilerOptions": {
    "target": "ESNext",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "module": "ESNext",
    "lib": ["dom", "dom.iterable", "ESNext"],
    "esModuleInterop": true,
    "declaration": true,
    "composite": true,
    "noEmit": false,
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "diagnostics": false,
    "emitDeclarationOnly": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@m/*": ["./packages/*"]
    },
    "typeRoots": ["node_modules/@types", "./types"]
  },
  "include": ["packages"],
  "exclude": [
    "node_modules",
    "dist",
    "**jest**",
    "**resources.js",
    ".pulumi",
    ".webiny",
    ".yarn"
  ]
}
